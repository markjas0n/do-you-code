<div class="container w-50 mx-auto">
  <div class="row">
    <h2 class="text-primary-emphasis">Create New Post</h2>
  </div>
  <div class="row">
    <form action="/api/posts" method="post" id="new-data-form" class="mb-4" enctype="multipart/form-data">
      <div class="form-group">
        <label for="title" class="form-label text-light-emphasis">Title</label>
        <input type="text" class="form-control" name="title" />
      </div>
      <div class="form-group">
        <label for="link" class="form-label text-light-emphasis">Project Link</label>
        <input type="text" class="form-control" name="link" />
      </div>
      <div class="form-group">
        <label for="description" class="form-label text-light-emphasis">Description</label>
        <textarea name="description" class="form-control" rows="3"></textarea>
      </div>
      <label for="screen">Screenshot</label>
      <input type="file" name="screen">
      <div class="form-group">
        <label for="">Tags</label>
        <select class="form-select" name="tags" id="tags" multiple aria-label="multiple select example">
          {{#each tags as |tag|}}
          <option value="{{tag.id}}">{{tag.name}}</option>
          {{/each}}
        </select>
      </div>
      <button type="submit" class="btn btn-primary mt-3">Create</button>
    </form>
  </div>
</div>