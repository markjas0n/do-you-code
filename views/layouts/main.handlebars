<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Codespace</title>
  <link rel="stylesheet" href="/css/style.css" />
  <!-- Link to Vapor theme from Bootswatch -->
  <link href="https://bootswatch.com/5/vapor/bootstrap.css" rel="stylesheet">
  <!-- Custom Font from Google Fonts -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap">
  <style>
    /* Custom styles for the Codespace title */
    .navbar-brand {
      font-family: 'Orbitron', sans-serif; /* Futuristic font */
      font-size: 1.9rem;
      font-weight: 700;
      background: linear-gradient(90deg, #ffff, #3a7bd5); /* Gradient text */
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.4);
      transition: transform 0.3s ease-in-out;
    }

    .navbar-brand:hover {
      transform: scale(1.1);
      text-shadow: 2px 2px 10px rgba(0, 210, 255, 0.8);
    }

    /* Fine print under the title */
    .navbar-brand-subtitle {
      font-size: 0.7rem;
      color: rgba(255, 255, 255, 0.7);
      text-transform: lowercase;
      display: block;
      text-align: center;
    }
  </style>
</head>

<body>

  {{! Navbar }}
  <header class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
    <div class="container">
      <a class="navbar-brand" href="/">code_space_
        <span class="navbar-brand-subtitle">a space for coders</span>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="btn btn-outline-warning m-1" href="/">Home</a>
          </li>
          {{#if loggedIn}}
          <li class="nav-item">
            <button type="button" class="btn btn-outline-danger" id="logout">Logout</button>
          </li>
          <li class="nav-item">
            <a href="/addPost" class="btn btn-outline-danger" id="post">Add Post</a>
          </li>
          {{else}}
          <li class="nav-item">
            <a class="btn btn-outline-success m-1" href="/login">Login</a>
          </li>
          {{/if}}
        </ul>
      </div>
    </div>
  </header>

  {{! Content }}
  <main class="container py-4">
    {{{body}}}
  </main>

  {{! Footer }}
  <footer class="bg-dark text-light text-center py-3">
      <img src="./images/codesmith.png" alt="CodeSmith Icon" class="footer-icon">

    <p class="mb-0">Â© 2024 Code Space. All Rights Reserved.</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  {{#if loggedIn}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>
