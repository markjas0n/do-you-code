<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Code Space</title>
  <link rel="stylesheet" href="/css/style.css" />
  <!-- Link to Vapor theme from Bootswatch -->
  <link href="https://bootswatch.com/5/vapor/bootstrap.css" rel="stylesheet">
</head>

<body class="bg-light">

  {{! Navbar }}
  <header class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
    <div class="container">
      <a class="navbar-brand text-light" href="/">Code Space</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link text-light" href="/">Home</a>
          </li>
          {{#if loggedIn}}
          <li class="nav-item">
            <button class="btn btn-outline-light text-light" id="logout">Logout</button>
          </li>
          {{else}}
          <li class="nav-item">
            <a class="btn btn-outline-light text-light" href="/login">Login</a>
          </li>
          {{/if}}
        </ul>
      </div>
    </div>
  </header>

  {{! Content }}
  <main class="container py-4">
    {{{body}}}
  </main>

  {{! Footer }}
  <footer class="bg-dark text-light text-center py-3">
    <p class="mb-0">Â© 2024 Code Space. All Rights Reserved.</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  {{#if loggedIn}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>
