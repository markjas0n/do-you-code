<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card border-secondary">
      <div class="card-header text-center text-white bg-secondary">
        <h2 class="card-title">Create Account</h2>
        </div>
        <div class="card-body">
          <form id="signup-form">
          <div class="mb-3">
            <label for="username-input-signup" class="form-label text-secondary">Username</label>
            <input type="text" class="form-control" id="username-input-signup" />
          </div>
          <div class="mb-3">
            <label for="password-input-signup" class="form-label text-secondary">Password</label>
            <input type="password" class="form-control" id="password-input-signup" />
          </div>
          <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-outline-primary w-45">Sign Up!</button>
          </div>
          <div class="text-center mt-3">
            <a href="/login" class="btn btn-outline-info">Login instead</a>
          </div>
        </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/signup.js"></script>
